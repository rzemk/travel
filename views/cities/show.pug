extends ../shared/template
block content
  h1 City details
  table
    tr
      td
        label.createLabelWidth Name:
        label= city.name
    tr
      td
        label.createLabelWidth Country:
        label= city.country.name
    tr
      td
        label.createLabelWidth Current temp:
        label= weather.temperature
        span degrees(?)
    tr
      td
        label.createLabelWidth Current weather:
        label= weather.descriptions
    tr
      td
        label.createLabelWidth Amount:
        label= city.amount
    tr
      td
        label.createLabelWidth Photo:
          img(src=city.photos[0]).createPhoto
